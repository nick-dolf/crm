extends layouts/default
include components/button-primary
include components/page-row
include components/modal-add-page


block header 
  include parts/header-dashboard

block main



  button.btn.btn-primary.add-page(type="button" data-bs-toggle="modal" data-bs-target="#exampleModal") Add Page

  +button-primary('Confirm', 'test-output')

  +modal-add-page

  .accordion
    .accordion-item
      .accordion-header(id="headingOne").d-flex
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseOne"
          )
          h3 /
      div.accordion-collapse.collapse(id="collapseOne")
        .accordion-body.list-group.list-group-flush
          li.list-group-item.d-flex.justify-content-end
            button.btn.btn-primary.add-page(data-folder="/" type='button') Add Page
          ul.list-group.list-group-flush
            +page-row("Home", "")
            +page-row("Home", "")
