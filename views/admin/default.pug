extends layouts/default
include /admin/section-helper/includes
include /admin/section-helper/wrapper

block header 
  include parts/header-dashboard
  include sections/controller

block main

  form.accordion(id="pageForm")
    .accordion-item
      h2.accordion-header(id="headingOne")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseOne"
          ) Page Details
      .accordion-collapse.collapse(id="collapseOne")
        include parts/page-meta

    .accordion-item
      h2.accordion-header(id="headingTwo")
        button.accordion-button.collapsed(
          type="button"
          data-bs-toggle="collapse" 
          data-bs-target="#collapseTwo"
          ) Page Style
      .accordion-collapse.collapse(id="collapseTwo")
        include parts/page-style

    #sortable
      if page.sections
        for section, index in page.sections
          +#{section.type}(section, index)
