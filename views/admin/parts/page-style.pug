mixin style-item(id, value, label, text)
  li.list-group-item
    div.row.gy-1
      div.col-md-3
        label.form-label.m-0= label
        div.form-text.m-0= text
      div.col-md-9
        input.form-control.form-control-color(type="color" name=id id=id value=value)

ul.accordion-body.list-group.list-group-flush
  +style-item('textColor', page.textColor,
              'Text Color', 
              "Main color for text.")
  +style-item('linkColor', page.linkColor,
              'Link Color',
              "Color of links.")
  +style-item('linkHoverColor', page.linkHoverColor,
              'Hover Color',
              "Color of link on hover.")
  +style-item('topColor', page.topColor,
              'Top Color',
              "Top gradient color.")
  +style-item('bottomColor', page.bottomColor,
              'Bottom Color',
              "Bottom gradient color.")
  +style-item('modalColor', page.modalColor,
              'Modal Color',
              "Popup color.")
  li.list-group-item 
    small &#128712; Styles just this page.
